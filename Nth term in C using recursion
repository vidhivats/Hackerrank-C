#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
//Complete the following function.

int find_nth_term(int n, int a, int b, int c,int d)
{
    int ans;
    d=a+b+c;
    ans=d+c+b;
    return ans;
    
}

int main() {
    int n, a, b, c,d;
  
    scanf("%d %d %d %d", &n, &a, &b, &c);
    int ans = find_nth_term(n, a, b, c,d);
 
    printf("%d", ans); 
    return 0;
}
